# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

# Go source files
[*.go]
indent_style = tab
indent_size = 4

[*.json]
indent_size = 2

[*.sh]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{js,ts}]
indent_size = 2
quote_type = single
